<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/editText" android:lines="5" android:inputType="textMultiLine"
              android:hint="テキストを入力してください"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/button" android:text="書き込み" android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_toRightOf="@+id/button" android:layout_alignParentBottom="true"
            android:text="読み込み"/>

</RelativeLayout>